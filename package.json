{
    "name": "simple-stdout",
    "version": "2.2.0",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "test": "vitest .",
        "test:once": "vitest run",
        "format": "prettier --write --list-different .",
        "check-format": "prettier --check .",
        "lint": "tsc --noEmit && eslint . --fix && pnpm run format",
        "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
        "ci": "pnpm build && pnpm check-format && pnpm check-exports",
        "prepublishOnly": "pnpm run ci",
        "prepare": "husky"
    },
    "type": "module",
    "main": "./dist/index.js",
    "bin": {
        "simple-stdout": "./dist/index.js"
    },
    "files": [
        "dist"
    ],
    "devDependencies": {
        "@arethetypeswrong/cli": "^0.18.2",
        "@eslint/js": "^9.28.0",
        "@types/node": "^25.0.10",
        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.1",
        "husky": "^9.1.7",
        "prettier": "3.8.1",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.52.0",
        "vitest": "^4.0.16"
    },
    "packageManager": "pnpm@10.27.0",
    "engines": {
        "node": ">=20"
    },
    "keywords": [],
    "description": "Get any shell command's stdout as a string",
    "author": {
        "name": "Craig Patik",
        "email": "craig@patik.com",
        "url": "https://patik.com"
    },
    "homepage": "https://github.com/patik/simple-stdout",
    "repository": {
        "type": "git",
        "url": "https://github.com/patik/simple-stdout.git"
    },
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    }
}
